{
  "name": "blossom-hls-upload",
  "version": "0.1.0",
  "description": "A cli tool for uploading videos to Blossom servers in HLS format",
  "author": "hzrd149",
  "license": "MIT",
  "type": "module",
  "bin": "./lib/index.js",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublish": "npm run build",
    "dev": "node --loader @swc-node/register/esm src/index.ts",
    "format": "prettier -w ."
  },
  "files": [
    "./bin/*",
    "./lib/*"
  ],
  "dependencies": {
    "blossom-client-sdk": "^0.9.1",
    "commander": "^12.1.0",
    "enquirer": "^2.4.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.2.0",
    "m3u8-parser": "^7.2.0",
    "mime": "^4.0.4",
    "nostr-tools": "^2.7.2",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.7.21",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.1",
    "@types/shelljs": "^0.8.15",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
